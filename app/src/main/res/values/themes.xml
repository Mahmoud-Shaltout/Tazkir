        <item name="colorPrimary">@color/main_green</item>
        <item name="colorPrimaryVariant">@color/main_dark_green</item>
        <item name="colorOnPrimary">@color/main_dark_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/main_dark_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
